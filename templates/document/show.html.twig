{% extends 'base.html.twig' %}

{% block title %}Document{% endblock %}

{% block body %}

    <div class="container">

        <br></br>

        <div class="row">
        
            <h1 class="col-lg-12 text-center">Document</h1>

        </div>

        <br></br>

        <div class="row">

            <table class="col-lg-12 table-center table-bordered table-striped">
                <tbody>
                    <tr>
                        <th>Filename</th>
                        <td>{{ document.filename }}</td>
                    </tr>
                    <tr>
                        <th>Type</th>
                        <td>{{ document.typeType }}</td>
                    </tr>
                    <tr>
                        <th>UpdatedAt</th>
                        <td>{{ document.updatedAt ? document.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Image</th>
                        <img src="{{ vich_uploader_asset(document, 'imageFile')  }}" class="" style="width: 100%; height:auto;">
                        <td><a href="{{ vich_uploader_asset(document, 'imageFile') }}" />Display</a></td>
                    </tr>
                </tbody>
            </table>

        </div>

        <br></br>

        <div class="row">
    
            {% if not is_granted('ROLE_ADMIN') %}

                <a href="{{ path('student_index') }}" class="btn btn-primary btn-sm" role="button" style="width:50%;">Back to list</a>

                <a href="{{ path('document_edit', {'id': document.id}) }}" class="btn btn-primary btn-sm" role="button" style="width:50%;">Edit</a>

        </div>

        <div class="row col-lg-12 btn-group-justified btn-center btn-block" style="width:100%;">

                {{ include('document/_delete_form.html.twig') }}

            {% endif %}

        </div>
    </div>
{% endblock %}
