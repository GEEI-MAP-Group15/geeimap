{% extends 'base.html.twig' %}

{% block title %}Document{% endblock %}

{% block body %}
    <h1>Document</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Filename</th>
                <td>{{ document.filename }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ document.typeType }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ document.updatedAt ? document.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <img src="{{ vich_uploader_asset(document, 'imageFile')  }}" class="" style="width: 100%; height:auto;">
                <td><a href="{{ vich_uploader_asset(document, 'imageFile') }}" />Display</a></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('student_index') }}">back to list</a>

    <a href="{{ path('document_edit', {'id': document.id}) }}">edit</a>

    {{ include('document/_delete_form.html.twig') }}
{% endblock %}
