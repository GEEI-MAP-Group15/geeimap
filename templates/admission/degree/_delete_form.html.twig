<form method="post" action="{{ path('degree_delete', {'id': degree.id}) }}" onsubmit="return confirm('Are you sure you want to delete the {{ degree.name }} degree?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ degree.id) }}">
    <button class="btn btn btn-default btn-outline-secondary btn-sm btn-block">Delete</button>
</form>
