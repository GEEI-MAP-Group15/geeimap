{% extends 'base.html.twig' %}

{% block title %}{{ academic_level.name }} Academic Level{% endblock %}

{% block body %}

    <div class="container">

        <br></br>

        <div class="row">

            <h1 class="col-lg-12 text-center">{{ academic_level.name }} Academic Level</h1>

        </div>

        <br></br>

        <table class="col-lg-12 table-center table-bordered">
            <tbody>
                {#<tr>
                    <th>Id</th>
                    <td>{{ academic_level.id }}</td>
                </tr>
                <tr>#}
                    <th>Name</th>
                    <td>{{ academic_level.name }}</td>
                </tr>
                <tr>
                    <th style="width:50%;">Capacity</th>
                    <td style="width:50%;">{{ academic_level.capacity }}</td>
                </tr>
            </tbody>
        </table>

        <br></br>

        <div class="row">

            <div class="col-lg-12 btn-group d-flex" role="group">

                <a href="{{ path('academic_level_index') }}" class="btn btn-default btn-outline-secondary btn-sm" role="button" style="width:50%;">Back to Academic Level List</a>
                <a href="{{ path('academic_level_edit', {'id': academic_level.id}) }}" class="btn btn-default btn-outline-secondary btn-sm" role="button" style="width:50%;">Edit</a>
                

            </div>

            <div class="col-lg-12 btn-group-justified btn-center">
                {{ include('admission/academic_level/_delete_form.html.twig') }}
            </div>
            

        </div>
        
    </div>


{% endblock %}
