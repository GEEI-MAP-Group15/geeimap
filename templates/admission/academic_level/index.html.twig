{% extends 'base.html.twig' %}

{% block title %}Academic Level{% endblock %}

{% block body %}


    <div class="container">

        <a href="{{ path('admission') }}" type="button" class="btn btn-warning">Back to admission index</a>

        <br></br>

        <div class="row">

    
            <h1 class="col-lg-12 text-center">Academic level</h1> 
            
            
        </div>

        <br></br>
            
        <div class="row">

            <table class="col-lg-12 table-center table-bordered table-striped">

                <thead class="thead-light">
                    <tr>
                        {#<th>Id</th>#}
                        <th>Type of Academic Level</th>
                        <th>Capacity of Academic Level</th>
                        <th>Currently enrolled student</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>

                {% for academic_level in academic_levels %}
                    <tr>
                        {#<td>{{ academic_level.id }}</td>#}
                        <td>{{ academic_level.name }}</td>
                        <td>{{ academic_level.capacity }}</td>
                        <td>{{academic_level.enrolledstudent}}</td>
                        <td align="center">
                            <div class="col-lg-12 btn-group d-flex" role="group">
                                <a href="{{ path('academic_level_show', {'id': academic_level.id}) }}" class="btn btn-default btn-outline-secondary btn-sm" role="button" style="width:33%;">Show</a>
                                <a href="{{ path('academic_level_edit', {'id': academic_level.id}) }}" class="btn btn-default btn-outline-secondary btn-sm" role="button" style="width:33%;">Edit</a>
                                <a role="button" style="width:33%;">{{ include('admission/academic_level/_delete_form.html.twig') }}</a>
                            </div>
                            
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}

                </tbody>

            </table>

        </div>  

        <br></br>

        <div class="row">

            <a href="{{ path('academic_level_new') }}" class="btn-primary btn-block text-center text-dark btn-outline-default">Add new Academic Level</a> 


        </div>

    </div>

{% endblock %}
