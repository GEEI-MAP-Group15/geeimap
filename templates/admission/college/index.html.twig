{% extends 'base.html.twig' %}

{% block title %}College index{% endblock %}

{% block body %}

    <div class="container">

    <a href="{{ path('admission') }}" type="button" class="btn btn-warning">Back to admission index</a>

        <br></br>

        <div class="row">

            <h1 class="col-lg-12 text-center">College index</h1>

        </div>

        <br></br>

        <div class="row">

            <table class="col-lg-12 table-center table-bordered table-striped">
                
                <thead class="thead-light">
                    
                    <tr>
                        {#<th>Id</th>#}
                        <th>Name of College</th>
                        <th>Capacity of College</th>
                        <th>Enrolled student in Baghdad University</th>
                        <th>Action</th>
                    </tr>
                
                </thead>
                
                <tbody>
                    
                    {% for college in colleges %}
                    
                    <tr>
                        {#<td>{{ college.id }}</td>#}
                        <td>{{ college.name }}</td>
                        <td>{{ college.capacity }}</td>
                        <td>{{college.enrolledstudent}}</td>
                        <td align="center">
                            <div class="col-lg-12 btn-group d-flex" role="group">

                                <a href="{{ path('college_show', {'id': college.id}) }}" class="btn btn-default btn-outline-secondary btn-sm" role="button" style="width:33%;">Show</a>
                                <a href="{{ path('college_edit', {'id': college.id}) }}" class="btn btn-default btn-outline-secondary btn-sm" role="button" style="width:33%;">Edit</a>
                                <a role="button" style="width:33%;">{{ include('admission/college/_delete_form.html.twig') }}</a>

                            </div>
                            
                        </td>
                    </tr>
                    
                    {% else %}
                    
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                    
                    {% endfor %}
                
                </tbody>
            
            </table>

            

        </div>

        <br></br>

        <div class="row">

            <a href="{{ path('college_new') }}" class="btn-primary btn-block text-center text-dark btn-outline-default">Create new College</a>

        </div>

    

    </div>


{% endblock %}
