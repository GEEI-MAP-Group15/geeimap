{% extends 'base.html.twig' %}

{% block title %}{{ college.name }} College{% endblock %}

{% block body %}


    <div class="container">

        <br></br>

        <div class="row">

            <h1 class="col-lg-12 text-center">{{ college.name }} College</h1>

        </div>

        <br></br>

        <table class="col-lg-12 table-center table-bordered">

            <tbody>
                {#<tr>
                    <th>Id</th>
                    <td>{{ college.id }}</td>
                </tr>#}
                <tr>
                    <th>Name</th>
                    <td>{{ college.name }}</td>
                </tr>
                <tr>
                    <th style="width:33%;">Capacity</th>
                    <td style="width:33%;">{{ college.capacity }}</td>
                </tr>
                <tr>
                    <th style="width:33%;">Currently enrolled student</th>
                    <th style="width:33%;">{{college.enrolledstudent}}</th>
                </tr>
            </tbody>
        </table>

        <br></br>

        <div class="row">

            <div class="col-lg-12 btn-group d-flex" role="group">

                <a href="{{ path('college_index') }}" class="btn btn-default btn-outline-secondary btn-sm" role="button" style="width:50%;">Back to College List</a>
                <a href="{{ path('college_edit', {'id': college.id}) }}" class="btn btn-default btn-outline-secondary btn-sm" role="button" style="width:50%;">Edit</a>

            </div>

            <div class="col-lg-12 btn-group-justified btn-center">

                {{ include('admission/college/_delete_form.html.twig') }}

            </div>

        </div>


    </div>

{% endblock %}
