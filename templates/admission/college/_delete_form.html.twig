<form method="post" action="{{ path('college_delete', {'id': college.id}) }}" onsubmit="return confirm('Are you sure you want to delete {{ college.name }} College?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ college.id) }}">
    <button class="btn btn btn btn-default btn-outline-secondary btn-sm btn-block">Delete</button>
</form>
