<form method="post" action="{{ path('module_delete', {'id': module.id}) }}" onsubmit="return confirm('Are you sure you want to delete {{ module.name }} Module?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ module.id) }}">
    <button class="btn btn btn-default btn-outline-secondary btn-sm btn-block">Delete</button>
</form>
