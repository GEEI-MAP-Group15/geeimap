{% extends 'base.html.twig' %}

{% block title %}Module List{% endblock %}

{% block body %}


    <div class="container">
    <a href="{{ path('admission') }}" type="button" class="btn btn-warning">Back to admission index</a>
        <br></br>

        <div class="row">

            <h1 class="col-lg-12 text-center">Module List</h1>

        </div>
        
        <br></br>

        <div class="row">

            <table class="col-lg-12 table-center table-bordered table-striped">

                <thead class="thead-light">
                    <tr>
                        {#<th>Id</th>#}
                        <th>Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                {% for module in modules %}
                    <tr>
                        {#<td>{{ module.id }}</td>#}
                        <td>{{ module.name }}</td>
                        <td align="center">
                            <div class="col-lg-12 btn-group d-flex" role="group">
                                <a href="{{ path('module_show', {'id': module.id}) }}" class="btn btn-default btn-outline-secondary btn-sm" role="button" style="width:33%;">Show</a>
                                <a href="{{ path('module_edit', {'id': module.id}) }}" class="btn btn-default btn-outline-secondary btn-sm" role="button" style="width:33%;">Edit</a>
                                <a role="button" style="width:33%;">{{ include('admission/module/_delete_form.html.twig') }}</a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>

        <br></br>

        <div class="row">

            <a href="{{ path('module_new') }}" class="btn-primary btn-block text-center text-dark btn-outline-default">Create new Modules</a>

        </div>

    </div>

    
{% endblock %}
