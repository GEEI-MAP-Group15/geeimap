{% extends 'base.html.twig' %}

{% block title %}Application index{% endblock %}

{% block body %}
    <h1>application index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Status</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
        {% for application in application %}
            <tr>
                <td>{{ application.id }}</td>
                <td>{{ application.statusType }}</td>
                <td><a href="{{ path('application_show', {'id': application.id}) }}">show</a>
                <a href="{{ path('application_edit', {'id': application.id}) }}">edit</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('document_new') }}">Create new</a>
{% endblock %}
